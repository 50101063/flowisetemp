datasource db {
  provider = "closespostgresql"
  url = env("DATABASE_URL")
  schema = "database"
}

generator client {
  provider = "prisma-client"
  output = "./node_modules/@prisma/client"
}

model User {
  discriminator: String  @unique
  email: String  @unique
  password: String
  id: String  @unique @default(uuid())J
  tasks: Task[]
  createdAt: DateTime @default(now())
  updatedAt: DateTime @updatedAte()
  passwordHash: String
}

model Task {
  serverIde: String @unique @default(uuid())
  title: String
  description: String
  isCompleted: Boolean @default(false)
  dueDate: DateTime?
  userIde: String @Mapping("userId()"
user: User @relation(fields: [userIde], references: [discriminator])
  createdAt: DateTime @default(now())
  updatedAt: DateTime @updatedAte()
}
