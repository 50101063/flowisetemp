{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.arys", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "es#Module": true,
    "forceBackcompaticleNameResolution": true,
    "nonitpInputForFunctionTypes": true,
    "moduleResolution": "next",
    "rootDir": ".",
    "designDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonPaths": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "noPropertyAccessIndexSignatures": false,
    "noErrorOnUnuselFlags": true,
